@model SimpleX.Model.usuario


@{
    //ViewBag.Title = "Cadastro de Clientes";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h4>Cadastro de contato</h4>*@
<div class="tab-content">
    <div class="tab-pane active" id="horizontal-form">

        @using (Html.BeginForm("SalvarUsuario", "Administrador", FormMethod.Post, new { @class = "form-horizontal", @id = "form-usuario" }))
        {
            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.ID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.empresaID, new { @class = "form-control1" })
                </div>
            </div>
            
            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.nome, new { @class = "form-control1", placeholder = "Nome" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.email, new { @class = "form-control1", placeholder = "Login" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Senha</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.senha, new { @class = "form-control1", placeholder = "Senha" })
                </div>
            </div>


            <div class="">
                <div class="">
                    <div class="">
                        <input type="button" onclick="salvarUsuario()" class="btn-primary btn" title="Salvar" name="Salvar" value="Salvar">
                        <input type="button" onclick="cancelarUsuario()" class="btn-default btn" value="Sair">
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<script src="~/Scripts/framework/jquery.simplexis.container.js"></script>
<script src="~/Scripts/framework/jquery.simplexis.usuario.js"></script>

