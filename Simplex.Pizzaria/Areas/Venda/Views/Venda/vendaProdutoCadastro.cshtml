@model SimpleX.Model.vendaProduto


@{
    //ViewBag.Title = "Cadastro de Clientes";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h4>Cadastro de contato</h4>*@
<div class="tab-content">
    <div class="tab-pane active" id="horizontal-form">

        @using (Html.BeginForm("SalvarVendaProduto", "Venda", FormMethod.Post, new { @class = "form-horizontal", @id = "form-vendaproduto" }))
        {

            //public Guid produtoID { get; set; }
            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.produtoID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.ID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.empresaID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.vendaID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Produto</label>
                <div class="col-sm-2">
                    <input value="@ViewBag.nomeProduto" class="autocomplete" onfocus="buscarProduto()" id="produtoID_autocomplete" type="text" name="" value="" />
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Quantidade</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(c => c.quantidade, new { @class = "form-control1", placeholder = "Quantidade" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Valor unitario</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.valorUnitario, new { @class = "form-control1", placeholder = "Valor unitario" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Valor total</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.valorTotal, new { @class = "form-control1", placeholder = "Valor total" })
                </div>
            </div>


            <div class="">
                <div class="">
                    <div class="">
                        <input type="button" onclick="salvarVendaProduto('@Model.vendaID')" class="btn-primary btn" title="Salvar" name="Salvar" value="Salvar">
                        <input type="button" onclick="cancelarVendaProduto()" class="btn-default btn" value="Sair">
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<script src="~/Scripts/framework/jquery.simplexis.vendaproduto.js"></script>