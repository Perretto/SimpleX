@model SimpleX.Model.clienteContato


@{
    //ViewBag.Title = "Cadastro de Clientes";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h4>Cadastro de contato</h4>*@
<div class="tab-content">
    <div class="tab-pane active" id="horizontal-form">

        @using (Html.BeginForm("SalvarClienteContato", "Cliente", FormMethod.Post, new { @class = "form-horizontal", @id = "form-clientecontato" }))
        {
            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.ID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.empresaID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="">
                <div class="">
                    @Html.HiddenFor(c => c.clienteID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(c => c.nomeContato, new { @class = "form-control1", placeholder = "Nome" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Telefone</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.telefoneContato, new { @class = "form-control1", placeholder = "Telefone" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.emailContato, new { @class = "form-control1", placeholder = "Email" })
                </div>
            </div>


            <div class="">
                <div class="">
                    <div class="">
                        <input type="button" onclick="salvarClienteContato()" class="btn-primary btn" title="Salvar" name="Salvar" value="Salvar">
                        <input type="button" onclick="cancelarClienteContato()"  class="btn-default btn" value="Cancelar">
                    </div>
                </div>
            </div>
        }
    </div>
</div>


