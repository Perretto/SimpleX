@model List<SimpleX.Model.clienteEndereco>
@using SimpleX.Model

@{
    var detalhes = "";
}

@{
    if (Model != null)
    {
        for (var i = 0; i < Model.Count; i++)
        {
            detalhes = "";
            <div class="grid-form1">
                <h4>@Model[i].logradouro</h4>

                <br />
                <table class="table">
                    <tbody>
                        <tr class="table-row">
                            <td class="table-img">
                                <img src="~/images/in.jpg" alt="">
                            </td>
                            <td class="table-text">
                                @*<h6>@Model[i].nomeFantasia</h6>*@


                                @if (Model[i].numero != "")
                                {
                                    detalhes += "Número: " + Model[i].numero + " | ";
                                }

                                @if (Model[i].bairro != "")
                                {
                                    detalhes += "Bairro: " + Model[i].bairro + " | ";
                                }
                                
                                @if (Model[i].cidade != null)
                                {
                                    detalhes += Model[i].cidade.nome + " | ";
                                }

                                @if (Model[i].estado != null)
                                {
                                    detalhes += Model[i].estado.nome + " | ";
                                }
                                
                                @if (Model[i].CEP != "")
                                {
                                    detalhes += "CEP: " + Model[i].CEP + " | ";
                                }
                                
                                <p>@detalhes</p>
                            </td>
                            @*<td class="march">Cliente com fatura em atraso</td>*@
                            <td style="width:1px">
                                <a href="javascript:ajaxModal('/Cliente/Cliente/ClienteEnderecoCadastroEdicao?idClienteEndereco=@Model[i].ID','CadastroEndereco','CadastroEnderecoConteudo')" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                
                                <a href="#" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <br />
        }
    }
}



