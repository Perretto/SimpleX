@using Simplex.Pizzaria.Models
@model List<produto>

@{
    var detalhes = "";
}

@{
    if (Model != null)
    {
        for (var i = 0; i < Model.Count; i++)
        {
            detalhes = "";
            <div class="grid-form1">
                <h4>@Model[i].codigo - @Model[i].nome</h4>

                <br />
                <table class="table">
                    <tbody>
                        <tr class="table-row">
                            <td class="table-img">
                                <img src="~/images/in.jpg" alt="">
                            </td>
                            <td class="table-text">
                                <h6>@Model[i].nome</h6>


                                @if (Model[i].codigo != "")
                                {
                                    detalhes += "Codigo: " + Model[i].codigo + " | ";
                                }
                                
                                <p>@detalhes</p>
                            </td>
                            @*<td class="march">Produto em falta no estoque</td>*@
                            <td style="width:1px">
                                <a href="~/Produto/Produto/ProdutoCadastroEdicao?idProduto=@Model[i].ID" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                <a href="javascript:excluirProduto('@Model[i].ID')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <br />
        }
    }
}

