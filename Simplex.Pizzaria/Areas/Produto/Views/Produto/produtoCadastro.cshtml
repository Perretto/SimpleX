@model SimpleX.Model.produto


@{
    //ViewBag.Title = "Cadastro de produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cadastro de produto</h4>
<div class="tab-content">
    <div class="tab-pane active" id="horizontal-form">

        @using (Html.BeginForm("salvarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal", @id = "form-produto" }))
        {
            <div class="form-group">
                <div class="col-sm-2">
                    @Html.HiddenFor(c => c.ID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2">
                    @Html.HiddenFor(c => c.empresaID, new { @class = "form-control1" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Código</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(c => c.codigo, new { @class = "form-control1", placeholder = "Código do cliente" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(c => c.nome, new { @class = "form-control1", placeholder = "Produto" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Valor do produto</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(c => c.valorProduto, new { @class = "form-control1", placeholder = "Valor do produto" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Categoria</label>
                <div class="col-sm-3">
                    @Html.DropDownList("produtoCategoriaID", (List<SelectListItem>)ViewBag.produtoCategorias, new { @class = "form-control1", placeholder = "Categoria", id = "produtoCategoriaID" })
                </div>
            </div>

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Tipo</label>
                <div class="col-sm-3">
                    @Html.DropDownList("produtoTipoID", (List<SelectListItem>)ViewBag.produtoTipos, new { @class = "form-control1", placeholder = "Tipo", id = "produtoTipoID" })
                </div>
            </div>

            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <input type="button" onclick="salvarProduto()" class="btn-primary btn" title="Salvar" name="Salvar" value="Salvar">
                        <input type="button" onclick="cancelarProduto()" class="btn-default btn" title="Cancelar" name="Cancelar" value="Cancelar">
                        <input type="button" onclick="limpaFormProduto()" class="btn-inverse btn" title="Limpar Dados" name="Limpar Dados" value="Limpar Dados">
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/framework/jquery.simplexis.produto.js"></script>